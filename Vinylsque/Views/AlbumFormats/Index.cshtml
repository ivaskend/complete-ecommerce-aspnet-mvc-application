@model IEnumerable<AlbumFormats>

@{
    ViewData["Title"] = "List of Album Formats";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-self-sm-end">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square">Edit</i></a>
                            <a class="btn btn-outline-info"><i class="bi bi-eye">Details</i></a>
                            <a class="btn btn-danger text-white"><i class="bi bi-trash">Delete</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>